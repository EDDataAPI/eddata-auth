# Environment configuration template
# Copy this file to eddata.config and fill in your values

# Domain configuration
EDDATA_DOMAIN=eddata-api.com
EDDATA_AUTH_BASE_URL=https://auth.eddata-api.com
EDDATA_WWW_BASE_URL=https://eddata-api.com

# Server configuration
EDDATA_AUTH_LOCAL_PORT=3003
NODE_ENV=production

# Security secrets (MUST be changed in production!)
EDDATA_SESSION_SECRET=your-long-random-session-secret-here
EDDATA_AUTH_JWT_SECRET=your-long-random-jwt-secret-here

# Frontier OAuth credentials
EDDATA_AUTH_CLIENT_ID=54fe2942-7b30-492a-801a-0a95e72c6b13

# Cookie domain
EDDATA_AUTH_COOKIE_DOMAIN=.eddata-api.com

# Data directories
EDDATA_DATA_DIR=/app/eddata-data
